1. sudo curl -OL h ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre-8.13.tar.gz > /usr/local/src/pcre-8.13.tar.gz
2. sudo mkdir -p /usr/local/src
   cd /usr/local/src
   tar xvzf pcre-8.13.tar.gz
   cd pcre-8.13
   ./config --prefix=/usr/local
   make
   sudo make install
   cd ..
   
   
   